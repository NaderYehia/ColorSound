@{
    var _authors = _db
                .Authors
                .Include(x => x.Followers)
                .Include(x => x.Following)
                .ToList();
    var _items = _db
                        .Items
                        .Include(x => x.Category)
                        .Include(x=>x.ItemImages)
                        .Include(x => x.Author)

                        .ToList();
            }
@using Microsoft.EntityFrameworkCore
@inject Grad_Proj.Infrastructure.ThemesShopDbContext _db;
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!-- main content -->
<main class="main">
    <!-- home -->
    <div class="home home--hero">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="hero owl-carousel" id="hero">
                        <div class="hero__slide" data-bg="/img/home/slide1.jpg">
                            <h1 class="hero__title">Exclusive digital asset</h1>
                            <p class="hero__text">There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour.</p>
                            <div class="hero__btns">
                                <a href="/Items/Index" class="hero__btn hero__btn--clr">Explore</a>
                                <a href="/Items/Create" class="hero__btn">Create</a>
                            </div>
                        </div>

                        <div class="hero__slide" data-bg="/img/home/slide2.jpg">
                            <h2 class="hero__title">Discover, collect, and sell <br>extraordinary  s</h2>
                            <p class="hero__text">Securely buy and sell unique digital collectibles. <br>Lowest transaction costs across all   markets guaranteed.</p>
                            <div class="hero__btns">
                                <a href="/Items/Index" class="hero__btn hero__btn--clr">Explore</a>
                                <a href="/Acconut/Login" class="hero__btn">Create</a>
                            </div>
                        </div>

                        <div class="hero__slide" data-bg="/img/home/slide3.jpg">
                            <h2 class="hero__title">Color sound –   Marketplace <br>themes</h2>
                            <p class="hero__text">Digital marketplace for collectibles and non-fungible tokens. <br>Buy, sell, and discover exclusive digital assets.</p>
                            <div class="hero__btns">
                                <a href="/Items/Index" class="hero__btn hero__btn--clr">Explore</a>
                                <a href="/Acconut/Login" class="hero__btn">Create</a>
                            </div>
                        </div>
                    </div>

                    <button class="main__nav main__nav--hero main__nav--prev" data-nav="#hero" type="button"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17,11H9.41l3.3-3.29a1,1,0,1,0-1.42-1.42l-5,5a1,1,0,0,0-.21.33,1,1,0,0,0,0,.76,1,1,0,0,0,.21.33l5,5a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42L9.41,13H17a1,1,0,0,0,0-2Z" /></svg></button>
                    <button class="main__nav main__nav--hero main__nav--next" data-nav="#hero" type="button"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z" /></svg></button>
                </div>
            </div>
        </div>
    </div>
    <!-- end home -->

    <div class="container">
        <!-- explore -->
        <section class="row row--grid">
            <!-- title -->
            <div class="col-12">
                <div class="main__title">
                    <h2>Explore exclusive digital assets</h2>
                </div>
            </div>
            <!-- end title -->

            <div class="col-12">
                <!-- tabs content -->
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab-1" role="tabpanel">
                        <div class="row row--grid">
                            @foreach (var item in _items)
                            {
                                <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                                    <!-- carousel card -->
                                    <div class="card">
                                        <div class="card__cover card__cover--carousel owl-carousel">
                                            @foreach (var image in item.ItemImages)
                                            {
                                                <img src="~/images/@image.Image" alt="">
                                            }
                                        </div>
                                        <h3 class="card__title"><a href="item.html">@item.Title</a></h3>
                                        <div class="card__author card__author--verified">
                                            <img src="~/images/@item.Author.Image" alt="">
                                            <a href="author.html"> @item.Author.NickName</a>
                                        </div>
                                        <div class="card__info">
                                            <div class="card__price">
                                                <span>Reserve price</span>
                                                <span>@item.Price</span>
                                            </div>
                                            <button class="card__likes" type="button">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M20.16,5A6.29,6.29,0,0,0,12,4.36a6.27,6.27,0,0,0-8.16,9.48l6.21,6.22a2.78,2.78,0,0,0,3.9,0l6.21-6.22A6.27,6.27,0,0,0,20.16,5Zm-1.41,7.46-6.21,6.21a.76.76,0,0,1-1.08,0L5.25,12.43a4.29,4.29,0,0,1,0-6,4.27,4.27,0,0,1,6,0,1,1,0,0,0,1.42,0,4.27,4.27,0,0,1,6,0A4.29,4.29,0,0,1,18.75,12.43Z" /></svg>
                                                <span></span>
                                            </button>
                                        </div>
                                    </div>
                                    <!-- end carousel card -->
                                </div>
                            }
                        </div>

                    </div>

                </div>
                <!-- end tabs content -->
            </div>
        </section>
        <!-- end explore -->
        <!-- new authors -->
        <section class="row row--grid">
            <!-- title -->
            <div class="col-12">
                <div class="main__title">
                    <h2><a href="authors.html">Authors</a></h2>
                </div>
            </div>
            <!-- end title -->
            <!-- carousel -->
            <div class="col-12">
                <div class="main__carousel-wrap">
                    <div class="main__carousel main__carousel--authors owl-carousel" id="authorsc">
                        @foreach (var item in _authors )
                        {
                            <div class="author">
                                <a href="/Items/Create?id=@item.Id" class="author__cover author__cover--bg" data-bg="/img/bg/bg-small.png">
                                </a>
                                <div class="author__meta">
                                    <a href="/Items/Create?id=@item.Id" class="author__avatar author__avatar--verified">
                                        <img src="~/images/@item.Image" alt="">
                                    </a>
                                    <h3 class="author__name"><a href="/Items/Create?id=@item.Id">@item.FirstName</a></h3>
                                    <h3 class="author__nickname"><a href="/Items/Create?id=@item.Id"> @item.NickName</a></h3>
                                    <p class="author__text">@item.About</p>
                                    <div class="author__wrap">
                                        <div class="author__followers">
                                            <p>@item.Following.Count</p>
                                            <span>Followers</span>
                                        </div>
                                        <button class="author__follow" type="button" AuthorId="@item.Id">
                                            @if (item.Followers.Any(x => x.AuthorId == @HttpContextAccessor.HttpContext.Session.GetInt32("Id")))
                                            {
                                                <text>Un Follow</text>
                                            }
                                            else
                                            {
                                                <text> Follow</text>
                                            }
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- end carousel -->
        </section>
        <!-- end new authors -->
    </div>
</main>
<!-- end main content -->
